{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node", "jasmine"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
