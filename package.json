    "@types/jasmine": "^5.1.8",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.15.31",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.3",
    "copyfiles": "^2.4.1",
