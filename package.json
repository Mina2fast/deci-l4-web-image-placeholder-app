{
  "name": "udacity-project-2-l4",
  "version": "1.0.0",
  "description": "This project aims to give you a real-world scenario in which you would read and write to your disk via a Node.js express server rather than a database. The project you create serves two purposes: to prepare you for setting up scalable code and architecture for real-world projects and tie together some of the most popular middleware and utilities found in Node.js projects. This project barely touches the surface of what is possible but will prove your ability to use what youâ€™ve learned in real-world scenarios.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node dist/backend/server.mjs",
    "build": "tsc && npm run copy-frontend && npm run copy-public && npm run copy-scripts && npm run copy-main && npm run copy-images-folder && npm run copy-image && npm run copy-thumbnails && npm run copy-html " ,
    "copy-frontend": "powershell.exe Copy-Item -Path src/frontend/ -Destination dist/ -Force",
    "copy-public": "powershell.exe Copy-Item -Path src/frontend/public -Destination dist/frontend -Force",
    "copy-html":"powershell.exe Copy-Item -Path src/frontend/public/index.html -Destination dist/frontend/public/ -Force",
    "copy-scripts":"powershell.exe Copy-Item -Path src/frontend/public/scripts -Destination dist/frontend/public -Force",
    "copy-main": "powershell.exe Copy-Item -Path src/frontend/public/scripts/main.js -Destination dist/frontend/public/scripts -Force" ,
    "copy-images-folder": "powershell.exe Copy-Item -Path src/frontend/public/images -Destination dist/frontend/public -Force",
    "copy-image": "powershell.exe Copy-item -Path src/frontend/public/images/fjord.jpg -Destination dist/frontend/public/images -Force",
    "copy-thumbnails":"powershell.exe Copy-Item -Path src/frontend/public/thumbnails -Destination dist/frontend/public -Force",
    "dev": "ts-node src/backend/server.mts",
    "test": "jasmine",
    "lint": "eslint . --ext .ts,.js",
    "prettier": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "npm run build",
    "type": "module"
  },
